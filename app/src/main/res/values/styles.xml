<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="primary">@color/primary</item>
        <item name="primary_dark">@color/primary_dark</item>
        <item name="primary_light">@color/primary_light</item>
        <item name="accent">@color/accent</item>
        <item name="primary_text">@color/primary_text</item>
        <item name="secondary_text">@color/secondary_text</item>
        <item name="hint_text">@color/hint_text</item>
        <item name="white_text">@color/white_text</item>
        <item name="icons">@color/icons</item>
        <item name="horizontal_divider">@color/horizontal_divider</item>
        <item name="highlight_background">@color/highlight_background</item>
        <item name="darky_background">@color/darky_background</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/dark_accent</item>

        <item name="primary">@color/dark_primary</item>
        <item name="primary_dark">@color/dark_primary_dark</item>
        <item name="primary_light">@color/dark_primary_light</item>
        <item name="accent">@color/dark_accent</item>
        <item name="primary_text">@color/dark_primary_text</item>
        <item name="secondary_text">@color/dark_secondary_text</item>
        <item name="hint_text">@color/dark_hint_text</item>
        <item name="white_text">@color/dark_white_text</item>
        <item name="icons">@color/dark_icons</item>
        <item name="horizontal_divider">@color/dark_horizontal_divider</item>
        <item name="highlight_background">@color/dark_highlight_background</item>
        <item name="darky_background">@color/dark_darky_background</item>
    </style>




    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>                   <!-- Text color of toolbar title text -->
        <item name="android:textColorSecondary">@android:color/white</item>                 <!-- Text color of navigation drawer icon-->
        <item name="color">@android:color/white</item>                                      <!-- Text color of navigation drawer icon-->
        <item name="actionMenuTextColor">@android:color/white</item>                        <!-- Menu item color-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Style for MaterialSearchView on HomeActivity -->
    <style name="MaterialSearchViewStyle">
        <!-- Hint for edit text -->
        <item name="android:hint">@string/activity_home_search_hint</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?primary</item>
    </style>

</resources>
